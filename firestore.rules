rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 管理者チェック用のヘルパー関数
    function isAdmin() {
      // config/adminsドキュメントから管理者リストを取得
      let adminDoc = get(/databases/$(database)/documents/config/admins);
      return request.auth.token.email in adminDoc.data.emails;
    }

    // たぬきコレクション
    match /tanukis/{tanukiId} {
      // 誰でもアクティブなたぬきを閲覧可能、管理者は全て閲覧可能
      allow read: if resource.data.status == 'active'
                  || (request.auth != null && isAdmin());

      // ログインユーザーのみ作成可能
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.status == 'active';

      // 投稿者本人または管理者のみ更新可能
      allow update: if request.auth != null
                    && (resource.data.userId == request.auth.uid || isAdmin());

      // 投稿者本人または管理者のみ削除可能
      allow delete: if request.auth != null
                    && (resource.data.userId == request.auth.uid || isAdmin());

      // 評価サブコレクション
      match /ratings/{ratingId} {
        // 誰でも閲覧可能（平均計算用）
        allow read: if true;

        // 作成条件（1人1回のみ）
        allow create: if request.auth != null
                      && ratingId == request.auth.uid
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.rating is int
                      && request.resource.data.rating >= 1
                      && request.resource.data.rating <= 5;

        // 更新は本人のみ可能
        allow update: if request.auth != null
                      && ratingId == request.auth.uid
                      && request.resource.data.rating is int
                      && request.resource.data.rating >= 1
                      && request.resource.data.rating <= 5;

        // 削除は管理者のみ
        allow delete: if request.auth != null && isAdmin();
      }

      // コメントサブコレクション
      match /comments/{commentId} {
        // 誰でも閲覧可能
        allow read: if true;

        // ログインユーザーのみ作成可能
        allow create: if request.auth != null
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.text is string
                      && request.resource.data.text.size() > 0
                      && request.resource.data.text.size() <= 500;

        // 投稿者本人または管理者のみ削除可能
        allow delete: if request.auth != null
                      && (resource.data.userId == request.auth.uid || isAdmin());
      }
    }

    // 設定コレクション(管理者リスト)
    match /config/{document} {
      // 認証済みユーザーは閲覧可能
      allow read: if request.auth != null;
      // 書き込みは不可(Firebase Consoleから手動設定)
      allow write: if false;
    }
  }
}
