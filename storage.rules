rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // たぬき写真のルール
    match /tanukis/{tanukiId}/{allPaths=**} {
      // 読み取りは誰でも可能
      allow read: if true;

      // 書き込みは認証済みユーザーのみ
      allow write: if request.auth != null;
    }

    // その他のファイルは拒否
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
